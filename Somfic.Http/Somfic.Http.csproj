<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Somfic</Authors>
    <Company>Somfic</Company>
    <Product>Http</Product>
    <RepositoryUrl>https://github.com/Somfic/Somfic</RepositoryUrl>
    <PackageIcon>logo_black_shine.jpg</PackageIcon>
    <PackageTags>Somfic Http Injection</PackageTags>
    <Version>1.0.1</Version>
    <Description>A wrapper around System.Net that works with dependency injection</Description>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>C:\Users\Lucas\Documents\GitHub\Somfic\Somfic.Http\Somfic.Http.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.6" />
